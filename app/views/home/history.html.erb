<h1 class='page-header'>History</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Opponent</th>
      <th>Score</th>
      <th>Result</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.date_played.strftime("%b %d") %></td> <!-- Usually I'd do such data decoration in Decorator objects -->
        <td><%= game.opponent.email %></td>
        <td><%= game.player_score %> - <%= game.opponent_score %></td>
        <td><%= game.outcome_for(current_user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>